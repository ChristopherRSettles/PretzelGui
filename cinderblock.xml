<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
  <block 
  	name="PretzelGUI" 
  	id="com.sharkbox.pretzel"
  	author="Charlie Whitney"
  	summary="A gui alternative built from the ground up for Cinder 0.9.0"
	git="https://github.com/cwhitney/PretzelGui"
  	>
	<supports os="macosx" />
	<supports os="msw" />
	
	<headerPattern>src/pretzel/*.h</headerPattern>
	<headerPattern>src/modules/*.h</headerPattern>
	<headerPattern>src/components/*.h</headerPattern>
	
	<platform os="macosx">
		<source compileAs="mm">src/components/BasePretzel.cpp</source>
		<source compileAs="mm">src/components/PretzelRow.cpp</source>
		<source compileAs="mm">src/components/ScrollPane.cpp</source>
		<source compileAs="mm">src/modules/PretzelButton.cpp</source>
		<source compileAs="mm">src/modules/PretzelColorPicker.cpp</source>
		<source compileAs="mm">src/modules/PretzelLabel.cpp</source>
		<source compileAs="mm">src/modules/PretzelSaveLoad.cpp</source>
		<source compileAs="mm">src/modules/PretzelSlider.cpp</source>
		<source compileAs="mm">src/modules/PretzelTextField.cpp</source>
		<source compileAs="mm">src/modules/PretzelToggle.cpp</source>
		<source compileAs="mm">src/pretzel/PretzelGlobal.cpp</source>
		<source compileAs="mm">src/pretzel/PretzelGui.cpp</source>
	</platform>
	<platform os="msw">
		<source>src/components/BasePretzel.cpp</source>
		<source>src/components/PretzelRow.cpp</source>
		<source>src/components/ScrollPane.cpp</source>
		<source>src/modules/PretzelButton.cpp</source>
		<source>src/modules/PretzelColorPicker.cpp</source>
		<source>src/modules/PretzelLabel.cpp</source>
		<source>src/modules/PretzelSaveLoad.cpp</source>
		<source>src/modules/PretzelSlider.cpp</source>
		<source>src/modules/PretzelTextField.cpp</source>
		<source>src/modules/PretzelToggle.cpp</source>
		<source>src/pretzel/PretzelGlobal.cpp</source>
		<source>src/pretzel/PretzelGui.cpp</source>
	</platform>

	<includePath>src</includePath>
	
	<resource
		name="PRETZEL_GUI_SKIN"
		type="IMAGE"
		>resources/default_skin.png</resource>
	<resource
		name="PRETZEL_COLOR"
		type="IMAGE"
		>resources/color-picker.png</resource>
  </block>
</cinder>